{% extends 'base.html.twig' %}

{% block title %}Page Connexion{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-black text-white py-12 px-4 sm:px-6 lg:px-8">
    <form method="post" class="mt-8 space-y-6">
        {% if error %}
            <div class="rounded-md bg-red-500 text-center py-2 px-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous Ãªtes connecter en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-accentcolor hover:text-gray-300">Logout</a>
            </div>
        {% endif %}

        <div>
            <h1 class="text-lg leading-6 font-medium text-white flex justify-center">Connection</h1>
        </div>
        <div>
            <label for="inputUsername" class="sr-only">Nom d'utilisateur</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-grey-300 focus:border-accentcolor focus:z-10 sm:text-sm" autocomplete="username" required autofocus>
        </div>
        <div>
            <label for="inputPassword" class="sr-only">Mot de Passe</label>
            <input type="password" name="password" id="inputPassword" class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-grey-300 focus:border-grey-300 focus:z-10 sm:text-sm" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}
        {# <div class="flex items-center justify-between">
            <div class="flex items-center">
                <input id="remember_me" name="remember_me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-grey-300 border-gray-300 rounded">
                <label for="remember_me" class="ml-2 block text-sm text-gray-900">
                    Remember me
                </label>
            </div>
        </div> #}

        <div>
            <button class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-accentcolor hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-grey-200" type="submit">
                Se connecter
            </button>
        </div>
    </form>
</div>
{% endblock %}
