{% extends 'base.html.twig' %}

{% block title %}Picture Cropped{% endblock %}

    {% block stylesheets %}
        {{ parent()}}
        {{ encore_entry_link_tags('cropperjs') }}
      {% endblock %}
      
      {% block javascripts %}
          {{ parent()}}
        {{ encore_entry_script_tags('cropperjs') }}
      {% endblock %}
      
      {% block body %}
        <div>
            <img id="image-cropped" src="{{ asset(picture.image) }}" data-id="{{ picture.id }}" >
        </div>
       
        <div class="flex justify-center items-center pt-4">
            <a class="custom-button-picture block md:inline-block md:w-auto md:px-4 md:py-2 rounded-lg bg-accentcolor font-titlefont" href="{{ path('exhibition_show_presentation', {id: picture.exhibition.id}) }}">
                <button class="custom-button-picture block md:inline-block md:w-auto md:px-4 md:py-2 rounded-lg bg-accentcolor font-titlefont" type="button">Enregistrer la crop</button>
            </a>
        </div>
    {% endblock %}



   